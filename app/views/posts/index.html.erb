<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Date</th>
      <th>Max people</th>
      <th>Location</th>
      <th>Location lat</th>
      <th>Location lng</th>
      <th>User</th>
      <th>Post status</th>
      <th>User lat</th>
      <th>User lng</th>
      <th>Description</th>
      <th>Min people</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.status_id %></td>
        <td><%= post.date %></td>
        <td><%= post.max_people %></td>
        <td><%= post.location %></td>
        <td><%= post.location_lat %></td>
        <td><%= post.location_lng %></td>
        <td><%= post.user_id %></td>
        <td><%= post.post_status_id %></td>
        <td><%= post.user_lat %></td>
        <td><%= post.user_lng %></td>
        <td><%= post.description %></td>
        <td><%= post.min_people %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
