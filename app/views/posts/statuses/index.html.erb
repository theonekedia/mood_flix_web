<p id="notice"><%= notice %></p>

<h1>Listing Posts Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts_statuses.each do |posts_status| %>
      <tr>
        <td><%= posts_status.name %></td>
        <td><%= link_to 'Show', posts_status %></td>
        <td><%= link_to 'Edit', edit_posts_status_path(posts_status) %></td>
        <td><%= link_to 'Destroy', posts_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Status', new_posts_status_path %>
